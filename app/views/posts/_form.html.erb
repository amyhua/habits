<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title, required: true, placeholder: "title" %>
  </div>
  <div class="field">
    <%= f.text_area :body_html %>
  </div>

  <div  class="emoticons-bar centered"
        id="choose-note-emoticons-bar">
    <p>
      Choose the mood that best represents your overall post.
    </p>
    <div class="emoticon emoticon-1" data-mood="1" title="extreme sadness"></div>
    <div class="emoticon emoticon-2" data-mood="2"></div>
    <div class="emoticon emoticon-3" data-mood="3"></div>
    <div class="emoticon emoticon-4" data-mood="4"></div>
    <div class="emoticon emoticon-5" data-mood="5" title="meh, neutral"></div>
    <div class="emoticon emoticon-6" data-mood="6"></div>
    <div class="emoticon emoticon-7" data-mood="7"></div>
    <div class="emoticon emoticon-8" data-mood="8"></div>
    <div class="emoticon emoticon-9" data-mood="9" title="extreme happiness"></div>
  </div>

  <%= f.hidden_field :mood %>

  <div class="actions">
    <%= f.submit 'Create Note', id: 'create-note-btn' %>
  </div>

<% end %>
